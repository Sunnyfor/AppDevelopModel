<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--标题栏样式-->

    <style name="style_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!--标题栏文字样式-->

    <style name="style_title_text" parent="style_font_black_big">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--标题栏图标样式-->

    <style name="style_title_icon" parent="style_font_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <!--通用按钮样式-->

    <style name="style_common_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:background">@drawable/sel_btn_bg</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--通用小按钮样式-->

    <style name="style_common_btn_small">
        <item name="android:layout_width">@dimen/dp_70</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:background">@drawable/sel_btn_able</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:gravity">center</item>
    </style>

    <!--通用横线分割样式-->

    <style name="style_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!--通用竖线分割样式-->

    <style name="style_line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!--通用黑色字体-->

    <style name="style_font_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="style_font_black_small" parent="style_font_black">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_black_big" parent="style_font_black">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--通用白色字体-->

    <style name="style_font_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="style_font_white_small" parent="style_font_white">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_white_big" parent="style_font_white">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--通用灰色字体-->

    <style name="style_font_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/font_gray</item>
    </style>

    <style name="style_font_gray_small" parent="style_font_gray">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="style_font_gray_big" parent="style_font_gray">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

</resources>
